<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".auth.RegistrationFragment">

    <FrameLayout
        android:id="@+id/step3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="55dp"
            android:fontFamily="@font/helveticaneuecyr_medium"
            android:text="Придумайте пароль"
            android:textColor="@color/black"
            android:textSize="23sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center|top"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="180dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/background">

            <EditText
                android:id="@+id/pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:fontFamily="@font/helveticaneuecyr_roman"
                android:hint="Пароль"
                android:textColorHint="#A0A9B4" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center|top"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="250dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/background">

            <EditText
                android:id="@+id/pass1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:fontFamily="@font/helveticaneuecyr_roman"
                android:hint="Подтвердите пароль"
                android:textColorHint="#A0A9B4" />
        </FrameLayout>


        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="10dp"
            android:src="@drawable/logo" />

        <FrameLayout
            android:id="@+id/sendinf"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom|center"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="100dp"
            android:background="@drawable/backgroundbutton">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/helveticaneuecyr_medium"
                android:text="Зарегестрироваться"
                android:textColor="#fff"
                android:textSize="20sp" />
        </FrameLayout>

        <TextView
            android:id="@+id/textView11"
            app:lineHeight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="90dp"
            android:layout_marginRight="50dp"
            android:fontFamily="@font/helveticaneuecyr_medium"
            android:gravity="center"
            android:text="Придумайте пароль состоящий из минимум 8ми символов, имеющий в себе цифры, заглавные и строчные буквы"
            android:textColor="#A0A9B4"
            android:textSize="16sp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/step2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="55dp"
            android:fontFamily="@font/helveticaneuecyr_medium"
            android:text="Введите ваше ФИО"
            android:textColor="@color/black"
            android:textSize="23sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center|top"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="160dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/background">

            <EditText
                android:id="@+id/name333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:fontFamily="@font/helveticaneuecyr_roman"
                android:hint="Имя"
                android:textColorHint="#A0A9B4" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center|top"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="230dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/background">

            <EditText
                android:id="@+id/surname333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:fontFamily="@font/helveticaneuecyr_roman"
                android:hint="Фамилия"
                android:textColorHint="#A0A9B4" />
        </FrameLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center|top"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="300dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/background">

            <EditText
                android:id="@+id/lastname333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:fontFamily="@font/helveticaneuecyr_roman"
                android:hint="Отчество"
                android:textColorHint="#A0A9B4" />
        </FrameLayout>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="10dp"
            android:src="@drawable/logo" />

        <FrameLayout
            android:id="@+id/nextbut2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom|center"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="100dp"
            android:background="@drawable/backgroundbutton">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/helveticaneuecyr_medium"
                android:text="Продолжить"
                android:textColor="#fff"
                android:textSize="20sp" />
        </FrameLayout>

        <TextView
            android:id="@+id/textView8"
            app:lineHeight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="90dp"
            android:layout_marginRight="50dp"
            android:fontFamily="@font/helveticaneuecyr_medium"
            android:gravity="center"
            android:text="Ваши личные данные могут понадобиться в дальнейшей работе с приложением"
            android:textColor="#A0A9B4"
            android:textSize="16sp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/step1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <TextView
            android:id="@+id/emailinmenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/helveticaneuecyr_medium"
            android:text="Введите почту"
            android:textColor="@color/black"
            android:textSize="23sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center|top"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="115dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/background">

            <EditText
                android:minHeight="48dp"
                android:id="@+id/mail333"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:fontFamily="@font/helveticaneuecyr_roman"
                android:hint="Почта"
                android:textColorHint="#A0A9B4" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/nextbut1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom|center"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="60dp"
            android:background="@drawable/backgroundbutton">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/helveticaneuecyr_medium"
                android:text="Продолжить"
                android:textColor="#fff"
                android:textSize="20sp" />
        </FrameLayout>

        <TextView
            android:id="@+id/textView3"
            app:lineHeight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="50dp"
            android:fontFamily="@font/helveticaneuecyr_medium"
            android:gravity="center"
            android:text="Ваша почта будет использоваться для входа в аккаунт"
            android:textColor="#A0A9B4"
            android:textSize="16sp" />
    </FrameLayout>
</FrameLayout>